		opacity 1
@keyframes _fadeIn95
	from
		transform scale(.95)
		opacity 0
	to
		transform scale(1)
		opacity 1
@keyframes _fadeOut95
	from
		transform scale(1)
		opacity 1
	to
		transform scale(.95)
		opacity 0
