$fontFamily = unquote("'Solis','Roboto Condensed',monospace")
$fontSize = 13pt
$popupFontFamily = unquote("'Solis','Roboto Condensed',sans-serif")
$popupFontSize = 12pt
$lineFontSize = 12pt
$lineH = 19px
